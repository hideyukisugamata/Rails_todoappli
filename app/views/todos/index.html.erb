<h1>todolist</h1>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped">
      <thead class="thead-light">
        <tr>
          <th>id</th>
          <th>Todolist</th>
          <th>Menu</th>
        </tr>
      </thead>
      <tbody>
        <% @todo_list.each do |todo| %>
          <tr>
            <td><%= todo.id %></td>
            <td><%= todo.list %></td>
            <td>[<%= link_to "更新",todo_edit_path(todo) %>] [<%= link_to "削除",todo_delete_path(todo), method: :delete ,data:{ confirm: '削除して宜しいですか？'}%>]</td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="d-grid gap-2 d-md-block">
      <a class="btn btn-primary" href="/todo/new" role="button">新規登録</a>
    </div>
  </div>
</div>